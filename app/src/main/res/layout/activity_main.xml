<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Title"
        android:text="" />

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Message"
        android:layout_below="@+id/edit_text_title"
        android:text="" />

    <Button
        android:id="@+id/channel_sender1"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="SEND ON CHANNEL 1"
        android:onClick="sendOnChannel1"
        android:layout_below="@+id/edit_text_message"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="428dp" />

    <Button
        android:id="@+id/channel_sender2"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="SEND ON CHANNEL 2"
        android:onClick="sendOnChannel2"
        android:layout_below="@+id/channel_sender1"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="428dp" />


</RelativeLayout>